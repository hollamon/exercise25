<struts-config>
    <form-beans>
      <form-bean name="bookmarkForm" type="com.implmentor.bo.BookmarkForm"/>
    </form-beans>

    <global-exceptions>
    </global-exceptions>

    <global-forwards>
    </global-forwards>

    <action-mappings>
      <action path="/list" type="com.implmentor.web.ListAction">
        <forward name="list" path="/list.jsp"/>
      </action>

      <action path="/add" type="com.implmentor.web.AddAction" name="bookmarkForm" scope="request" input="/list.jsp" validate="true">
        <forward name="list" path="/list.do"/>
      </action>

	  <action path="/edit" type="com.implmentor.web.EditAction">
        <forward name="edit" path="/edit.jsp"/>
        <forward name="list" path="/list.do"/>
	  </action>

      <action path="/editsave" cancellable="true" type="com.implmentor.web.EditSaveAction" name="bookmarkForm" scope="request" input="/edit.jsp" validate="true">
        <forward name="edit" path="/edit.jsp"/>
        <forward name="list" path="/list.do"/>
      </action>

	  <action path="/delete" type="com.implmentor.web.DeleteAction">
	    <forward name="delete" path="/delete.jsp"/>
	  </action>

      <action path="/deletebookmark" cancellable="true" type="com.implmentor.web.DeleteBookmarkAction" name="bookmarkForm" scope="request" input="/delete.jsp" validate="false">
        <forward name="list" path="/list.do"/>
      </action>

